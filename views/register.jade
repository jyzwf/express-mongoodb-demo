doctype html
html
	head
		meta(charset='utf-8')
		title 注册页面
		link(rel="stylesheet", href="./libs/bootstrap.min.css")
		link(rel="stylesheet", href="./css/register_login.css")
		script(type='text/javascript',src='./libs/jquery.min.js')
		script(type='text/javascript',src='./libs/bootstrap.min.js')
	body
		| !{message}
		.panel.panel-info#register
			.panel-heading 用户注册
			.panel-body 
				input(type="text",class='form-control input-sm',id='uname' placeholder='用户名')
				input(type="text",class='form-control input-sm',id='upswd' placeholder='密码')
				input(type="text",class='form-control input-sm',id='surepswd' placeholder='确认密码')
				button(type='button',class='btn btn-success btn-block btn-sm' id='register_btn') 注册
				a(href='/login',class='btn btn-info pull-right btn-sm' id='login_btn') 登录

		script(type='text/javascript',src='./js/register.js')
