doctype html
html
	head
		meta(charset='utf-8')
		title 登录页面
		link(rel="stylesheet", href="./libs/bootstrap.min.css")
		link(rel="stylesheet", href="./css/register_login.css")
		script(type='text/javascript',src='./libs/jquery.min.js')
		script(type='text/javascript',src='./libs/bootstrap.min.js')

	body
		.panel.panel-info#login
			.panel-heading 用户登录
			.panel-body 
				input(type="text",class='form-control input-sm',id='uname' placeholder='用户名')
				input(type="text",class='form-control input-sm',id='upswd' placeholder='密码')
				button(type='button',class='btn btn-success btn-block btn-sm' id='login_btn') 登录
				a(href='register',class='btn btn-info pull-right btn-sm' id='register_btn') 注册

		script(type='text/javascript',src='./js/login.js')